<UserControl x:Class="CPSC_481_Project.FoodItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid d:DataContext="{d:DesignInstance local:FoodItemView }">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
        <Image x:Name="Image" Grid.Row="0" Margin="0,10,0,0">
            <Image.Source>
                <Binding Path="ImagePath" />
            </Image.Source>
        </Image>
        <TextBlock x:Name="Item"  Grid.Row="1" Text="{Binding Name}" HorizontalAlignment="Center"/>
        <TextBlock x:Name="Price"  Grid.Row="2" Text="{Binding Price}" HorizontalAlignment="Center"/>
        <Button Grid.Row="3" Content="Add" HorizontalAlignment="Center" Margin="0,0,0,10" Command="{Binding ConfigureCommand}"/>
    </Grid>
</UserControl>
