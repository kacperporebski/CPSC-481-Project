<UserControl x:Class="CPSC_481_Project.OrderInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:OrderViewModel }">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <local:MyScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <ItemsControl x:Name="Items" ItemsSource="{Binding PeoplesOrders}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"/>
                            <local:MyScrollViewer x:Name="OrderInformation" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                                <ItemsControl x:Name="Items" ItemsSource="{Binding Order.OrderInformation}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="1" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}                           Price:${1}">
                                                        <Binding Path="Item" />
                                                        <Binding Path="Price" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                            </local:MyScrollViewer>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </local:MyScrollViewer>

        <Button Grid.Row="2" Content="Confirm"/>
        <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black" Background="LightBlue">
            <Label Grid.Row="0" Background="AliceBlue" HorizontalContentAlignment="Center" VerticalContentAlignment="Top">
                <TextBlock Text="Order" FontSize="40" Height="50" Margin="0,-15,0,0"/>
            </Label>
        </Border>



    </Grid>
</UserControl>
