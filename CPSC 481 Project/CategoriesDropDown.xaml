<UserControl x:Class="CPSC_481_Project.CategoriesDropDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

    <Style x:Key="MyMenuItem" TargetType="MenuItem">
        <Setter Property="Background" Value="AliceBlue"/>
    </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>    



        <ToggleButton x:Name="MainButton" Content="Categories" Click="MainButton_OnClick"/>
        <StackPanel Grid.Row="1" x:Name="Box" Background="AliceBlue" Visibility="Collapsed">
            <MenuItem Header="Appetizers"/>
            <MenuItem Header="Entrees"/>
            <MenuItem Header="Drinks" Click="MenuItem_OnClick"/>
                <MenuItem Header="Deserts"/>
        </StackPanel>
    </Grid>
</UserControl>
