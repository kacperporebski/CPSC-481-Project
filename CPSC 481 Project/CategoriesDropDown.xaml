<UserControl x:Class="CPSC_481_Project.CategoriesDropDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_481_Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>    
        <ToggleButton x:Name="MainButton" Content="Categories" Click="MainButton_OnClick" FontSize="30" />
        <Border Grid.Row="1"  x:Name="Box" Visibility="Collapsed">
            <StackPanel x:Name="Box2" Background="AliceBlue" Visibility="Collapsed" Width="300">
            <MenuItem Header="Appetizers" FontSize="20" Height="50"/>
            <MenuItem Header="Entrees" FontSize="20" Height="50"/>
            <MenuItem Header="Drinks" Click="MenuItem_OnClick" FontSize="20" Height="50"/>
            <MenuItem Header="Deserts" FontSize="20" Height="50"/>
        </StackPanel>
        </Border>
    </Grid>
       
</UserControl>
